@page "/message"
@inherits R3duxComponent<MessageState>

<PageTitle>R3dux - Message</PageTitle>
<MudStack>
  <p class="chapter">Example</p>
  <MudText Typo="Typo.h3">Message</MudText>
  <p>
    Creates a simple message example using the R3dux state management library for predictable state handling,
    featuring a button to set a new message.
  </p>
</MudStack>

<article>
  <p>Message: <strong>@State.Message</strong></p>
  <p>Character count: <strong>@State.SelectMessageLength()</strong></p>
  <p>Reverse: <strong>@State.SelectMessageInReverse()</strong></p>
  <footer>
    <MudButton @onclick="SetMessage" Variant="Variant.Outlined">Set New Message</MudButton>
  </footer>
</article>

@code {

  private void SetMessage()
    => Dispatch(new SetMessage("New message from Blazor!"));

}