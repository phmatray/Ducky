@page "/counter"
@inherits R3duxComponent<int>

<PageTitle>R3dux - Counter</PageTitle>
<MudStack>
  <p class="chapter">Example</p>
  <MudText Typo="Typo.h3">Counter <strong>@State</strong></MudText>
  <p>
    Creates an interactive counter using the R3dux state management library for predictable state handling,
    featuring increment, decrement, and reset buttons to manage the counter state.
  </p>
  <ul>
    <li>If the counter exceeds 15, then an effect will be triggered to reset the counter to 10 after 3 second.</li>
    <li>If the counter reaches zero, the decrement button will be disabled.</li>
  </ul>
</MudStack>

<article>
  @if(State > 15)
  {
    <progress></progress>
  }
  else
  {
    <progress value="@State" max="15"></progress>
  }
  <footer>
    <MudButtonGroup Variant="Variant.Outlined">
      <MudButton @onclick="Decrement" Disabled="@(State <= 0)">Decrement</MudButton>
      <MudButton @onclick="Reset">Reset Counter</MudButton>
      <MudButton @onclick="Increment">Increment</MudButton>
    </MudButtonGroup>
  </footer>
</article>

@code {

  private void Increment()
    => Dispatch(new Increment());

  private void Decrement()
    => Dispatch(new Decrement());

  private void Reset()
    => Dispatch(new Reset());

}