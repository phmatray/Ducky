@inherits R3duxComponent<NotificationsState>

<MudBadge
  Content="@UnreadNotificationCount"
  Overlap Color="Color.Secondary"
  Class="mt-2"
  Visible="@NotificationBadgeVisible">
  <MudIconButton
    Icon="@Icons.Material.Filled.Notifications"
    Color="Color.Inherit"
    Edge="Edge.End"
    OnClick="ToggleNotifications"
    Class="mt-n2"/>
</MudBadge>

@code {
  
  private int UnreadNotificationCount
    => State.SelectUnreadNotificationCount();
  
  private bool NotificationBadgeVisible
    => State.SelectUnreadNotificationCount() > 0;
  
  private void ToggleNotifications()
    => Dispatch(new ToggleNotifications());
  
}
