@inherits R3duxLayout<LayoutState>

<header>
  <div class="container">
    <nav>
      <ul>
        <li>
          <NavLink href="">
            <strong>@State?.SelectFullTitle()</strong>
          </NavLink>
        </li>
      </ul>
      <ul>
        <li><NavLink href="message">Message</NavLink></li>
        <li><NavLink href="counter">Counter</NavLink></li>
        <li><NavLink href="todo">Todo</NavLink></li>
        <li><NavLink href="timer">Timer</NavLink></li>
        <li><NavLink href="movies">Movies</NavLink></li>
      </ul>
    </nav>
  </div>
  <hr/>
</header>

<section class="container">
  @Body
</section>

<footer>
  <hr/>
  <div class="container">
    <p>Made with ❤️ by Philippe Matray</p>
    <button @onclick="OpenModal">Open Modal</button>
  </div>
</footer>

<dialog open="@State?.IsModalOpen">
  <article>
    <header>
      <button aria-label="Close" rel="prev" @onclick="CloseModal"></button>
      <p>
        <strong>🗓️ Thank You for Registering!</strong>
      </p>
    </header>
    <p>
      We're excited to have you join us for our
      upcoming event. Please arrive at the museum
      on time to check in and get started.
    </p>
    <ul>
      <li>Date: Saturday, April 15</li>
      <li>Time: 10:00am - 12:00pm</li>
    </ul>
  </article>
</dialog>

